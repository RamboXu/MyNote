<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_dp_10"
        android:layout_marginRight="@dimen/size_dp_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/c_292929"
        android:textSize="@dimen/size_sp_16"
        android:text="title"/>

    <com.e.common.widget.image.ImageLoaderView
        android:id="@+id/image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dp_10"
        android:layout_marginRight="@dimen/size_dp_10"
        android:layout_marginTop="@dimen/size_dp_10"
        android:layout_marginBottom="@dimen/size_dp_5"
        android:button="@drawable/icon_check_selector"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>
