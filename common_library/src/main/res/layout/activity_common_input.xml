<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/include_nav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_50"
        android:layout_marginTop="@dimen/size_dp_25"
        android:background="@color/white"
        android:orientation="vertical" >

        <com.e.common.widget.CleanableEditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_15"
            android:background="@null"
            android:drawableRight="@drawable/btn_close_edittext"
            android:gravity="center_vertical"
            android:hint="请输入"
            android:paddingLeft="@dimen/size_dp_15"
            android:textColor="#474747"
            android:textColorHint="#d3d3d3"
            android:textSize="@dimen/size_sp_19" />
    </LinearLayout>

</LinearLayout>