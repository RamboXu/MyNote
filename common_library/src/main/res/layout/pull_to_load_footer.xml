<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/pull_to_load_footer_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_60"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/pull_to_load_footer_progressbar"
            android:layout_width="@dimen/size_dp_28"
            android:layout_height="@dimen/size_dp_28"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:indeterminateDrawable="@drawable/progressbarstyle"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pull_to_load_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_dp_5"
            android:text="@string/pull_to_refresh_header_hint_loading"
            android:textColor="#999999"
            android:textSize="@dimen/size_sp_16"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>