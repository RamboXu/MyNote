<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quickaction_arrow_up" />

    <com.e.common.widget.effect.layout.EffectColorLinearLayout
        android:id="@+id/effectLayout_item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow_up"
        android:fadingEdgeLength="0dip"
        android:paddingLeft="@dimen/size_dp_5"
        android:paddingRight="@dimen/size_dp_5"
        app:effectColor_bgNormalColor="@color/c_pop_menu_color"
        app:effectColor_bgPressedColor="@color/c_pop_menu_color"
        app:effectColor_radius="@dimen/size_dp_5" />

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/effectLayout_item_container"
        android:layout_marginTop="-1dip"
        android:src="@drawable/quickaction_arrow_down" />

</RelativeLayout>